<% if user_signed_in? %> 
 <div> Welcome <%= current_user.email %> </div> 
<% end %>
<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>

<% if !user_signed_in? %> 
  <p>
    <%= button_to "Sign in", new_user_session_path %> 
  </p>
  <% else %>
  <p>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
  </p>
<% end %>
